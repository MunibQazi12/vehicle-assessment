# Dealer Tower API Configuration
DEALER_TOWER_API_URL=https://api.dealertower.com/public

# Local Development Hostname Override
# Set this to test a specific dealer locally
NEXTJS_APP_HOSTNAME=www.tonkin.com
NEXTJS_APP_DEALER_ID=73d6c4fc-8ffb-471e-88c4-5e8eeddc1c63

# Cache Revalidation Secret
# Used by webhook endpoint to invalidate cache
REVALIDATION_SECRET=your-secret-here

# Node Environment
NODE_ENV=development

# Enable or Disable Website Scripts
ENABLE_WEBSITE_SCRIPTS=0

# Security Configuration
# Rate limiting disabled for local development (comment out or leave empty)
RATE_LIMIT_MAX_REQUESTS=10

# Origin validation disabled for local development (allows localhost)
VALIDATE_ORIGIN=0

# CSRF Protection (set to 0 to disable, enabled by default)
CSRF_ENABLED=1

# CSRF Token TTL in seconds (default: 3600 = 1 hour)
CSRF_TOKEN_TTL=3600

# Redis Configuration (REQUIRED for CSRF tokens)
# Example: redis://localhost:6379 or redis://user:password@host:port/db
REDIS_URL=redis://localhost:6379/0


# CDN Configuration
# Base URL for static assets served via CDN
# Must be a valid HTTPS URL; fallback to local assets if invalid or unavailable
NEXT_PUBLIC_APP_ASSETS_URL="https://devcdn.dealertower.com"

# Database connection string
MONGODB_BASE_URI=mongodb://localhost:27017

# Used to encrypt JWT tokens
PAYLOAD_SECRET=your-payload-secret-here
# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE
# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE

# S3/MinIO Storage Configuration
S3_BUCKET=media
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000

# Local Static Pages / Load From Page Builder
LOAD_STATIC_PAGES=false
